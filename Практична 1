#include <stdio.h>

int main() {

    SetConsoleOutputCP(1251);
    double t1, t2, t3; 
    printf("Введіть три числа (t1 t2 t3): ");
    scanf("%lf %lf %lf", &t1, &t2, &t3); 
    double speed1 = 1.0 / t1;
    double speed2 = 1.0 / t2;
    double speed3 = 1.0 / t3;
  double total_speed = speed1 + speed2 + speed3;

   
    double time = 1.0 / total_speed;
  printf("Час, за який гості разом з'їдять пиріг: %.2lf годин\n", time);

    return 0;
}
